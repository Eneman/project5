{% extends "base.html.twig" %}

{% block body %}
    <h1>GG</h1>

    <form action="{{ path('security_login') }}" method="POST">
        <div class="form-group">
            <input type="text" placeholder="Mail" class="form-control" required name="_username">
        </div>
        <div class="form-group">
            <input type="password" placeholder="Mot de Passe" class="form-control" required name="_password">
        </div>
        <div class="form-group">
                <button type="submit" class="btn btn-success">Login</button>
        </div>
    </form>
{% endblock %}