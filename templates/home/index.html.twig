{% extends 'home/home.base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block content %}
    <h2 class="page-title text-center">Acceuil</h2>
    {% for row in posts|batch(2) %}
    <div class="row">
        {% for post in row %}
        <div class="col-sm-6">
                <div class="card" style="margin-bottom: 2rem;">
                    <div class="card-body">
                        <h5 class="card-title"><a href="{{ path('view_post', {'id' : post.id}) }}">{{ post.title }}</a></h5>
                        <h6 class="card-subtitle mb-2 text-muted">Post√© le {{ post.date | date('d/m/Y') }}</h6>
                        <p class="card-text">{{ post.content|length > 50 ? post.content|slice(0, 50) ~ ' ...' : post.content }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% endfor %}
{% endblock %}
