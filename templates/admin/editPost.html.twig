{% extends "admin/admin.base.html.twig" %}

{% block content %}
    {% if new == true %}
        <h1>Nouvel Article</h1>
    {% else %}
        <h1>Modifier un Article</h1>
    {% endif %}

    {{ form_start(form) }}
    {{ form_row(form.title, {'label': "Titre", 'attr':{'placeholder': post.title}})}}
    {{ form_row(form.content, {'label': "Article", 'attr':{'placeholder': post.content}})}}
    <button class="btn btn-success" type="submit">Enregistrer</button>
    {{ form_end(form) }}
{% endblock %}

